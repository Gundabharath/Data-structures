#include <stdio.h>
int reverse(int x) {
	printf("name : G.Bharath\nrego: 192210561");
    int reversed = 0;
    while (x != 0) {
        reversed = reversed * 10 + x % 10;
        x /= 10;
    }
    return reversed;
}
int main() {
    int num;
    printf("\nEnter a 32-bit signed integer: ");
    scanf("%d", &num);   
    int reversed = reverse(num);  
    printf("\nReversed integer: %d\n", reversed);
    return 0;
}

